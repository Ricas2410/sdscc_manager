# SDSCC Environment Variables Template
# Copy this to .env and fill in your values

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=sdscc.fly.dev,localhost,127.0.0.1

# Database (PostgreSQL/CockroachDB/Supabase)
# Format: postgresql://user:password@host:5432/dbname
DATABASE_URL=postgresql://postgres.xxxx:password@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# Cloudinary (Media Storage)
# Option 1: Use CLOUDINARY_URL (recommended for Fly.io)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Option 2: Or use individual settings
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# Optional: Logging level
DJANGO_LOG_LEVEL=INFO
